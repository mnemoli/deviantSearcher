<html>
  <head>
    <title>Deviant Searcher</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
$(document).ready(function(){
    $("#button").click(function(){
        var searchTerm = $("#searchTerm").val();
        fireAjax(searchTerm);
    });
});

function fireAjax(searchTerm) {
  $.ajax({url: encodeURI("/devsearch?search=" + searchTerm), success: function(result){
    $("#div1").html(result);
  }});
}

</script>
  </head>
  <body>
    <h1>Enter your search</h1>
    <h3>or leave empty for a random word</h3>
    <input id="searchTerm"></input>
    <input id="button" type="submit" value="Do it"></button>
    <div id="div1"></div>
  </body>
</html>